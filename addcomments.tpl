<div class="comments-form">
<h4>Оставить комментарий</h4>
<div class="row">

[not-logged]
<div class="col-md-6">
<div class="form-group">
<input type="text" name="name" id="name" class="form-control" placeholder="Имя" required="required">
</div></div>

<div class="col-md-6">
<div class="form-group">
<input type="email" name="mail" id="mail" class="form-control" placeholder="Email" required="required">
</div></div>
[/not-logged]
    
<div class="col-md-12">
<div class="form-group">{editor}</div>
</div>
    
[recaptcha]
<div class="col-md-12"><div class="form-group mb-3">
{recaptcha}
</div></div>
[/recaptcha]
                                        
<div class="col-lg-12">
<button type="submit" name="submit" class="btn-custom">Отправить</button>
</div> 

</div></div>